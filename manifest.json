{
  "manifest_version": 2,
  "name": "Desktop Everywhere",
  "version": "1.0.2",
  "author": "Andrew Gaul",
  "description": "Redirect mobile links to desktop equivalents.",
  "background": {
    "scripts": ["desktop_everywhere.js"]
  },
  "icons": {
    "48": "desktop.svg"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ]
}
